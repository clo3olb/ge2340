{
  "hosting": {
    "public": "docs",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/demo",
        "destination": "/demo.html"
      },
      {
        "source": "/experiments",
        "destination": "/experiments.html"
      },
      {
        "source": "/references",
        "destination": "/references.html"
      }
    ]
  }
}
